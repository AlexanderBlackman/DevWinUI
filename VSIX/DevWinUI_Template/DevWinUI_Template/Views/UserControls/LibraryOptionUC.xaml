<UserControl x:Class="DevWinUI_Template.LibraryOptionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DevWinUI_Template"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <CheckBox x:Name="LibraryCheckBox"
                  Checked="CheckBox_Checked"
                  Unchecked="CheckBox_Unchecked" />
        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                   Style="{StaticResource BaseTextBlockStyle}"
                   Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:LibraryOptionUC}}" />
    </StackPanel>
</UserControl>
