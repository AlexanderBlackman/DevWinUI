                               Fill="{TemplateBinding Background}"
                               Opacity="{TemplateBinding Opacity}"
                               Stroke="{TemplateBinding BorderBrush}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
